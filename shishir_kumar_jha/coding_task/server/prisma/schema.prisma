model PostData {
  postId      String    @id @unique
  userId      String
  channelId   String
  content     String
  attachment  String?
  commentIdArray   String
  likes       Int
  tagIdArray       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
